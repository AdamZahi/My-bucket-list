generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  clerkUserId String @unique
  email String  @unique
  name  String?
  imageUrl String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  List    my_list[]
}

model my_list  {
  id               Int      @id @default(autoincrement())
  user_id          String
  user      User     @relation(fields: [user_id], references: [clerkUserId])
  title            String
  genre            String
  overview         String?   // Nullable field
  language         String
  status           String   @default("Not Started Yet")
  additional_links String?  // Nullable field
  form             String
  created          DateTime? @default(now())
}